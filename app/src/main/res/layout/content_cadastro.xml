<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/vinho">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editNomeCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/vinho"
                    android:hint="Nome"
                    android:textColor="@color/vinho"
                    android:textColorHint="@color/vinho"
                    android:textColorLink="@color/vinho" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/vinho">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editEmailCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/vinho"
                    android:hint="E-mail"
                    android:textColor="@color/vinho"
                    android:textColorHint="@color/vinhoHint"
                    android:textColorLink="#fff" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/vinho">

                <EditText
                    android:id="@+id/editSenhaCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/vinho"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:textColor="@color/vinho"
                    android:textColorHint="@color/vinhoHint"
                    android:textColorLink="#fff" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/buttonCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/vinho"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Cadastrar"
                android:textColor="#fff"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="184dp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>